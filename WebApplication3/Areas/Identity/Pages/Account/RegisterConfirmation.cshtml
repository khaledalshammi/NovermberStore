@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 class="mt-5 mb-5" style="color: #417690;">@ViewData["Title"]</h1>
@{
    <p class="mt-3" style="color: #417690;">
        Please check your email to confirm your account.
    </p>
    <p class="mt-4 mb-5" style="color: #417690;">
        I Have Confirmed My Email
        <a style="color: #417690; font-weight:900;" href="/Identity/Account/Login">Login</a>
    </p>
}