@model ProductVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add new item</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">

            <div class="border p-3 mt-4">

                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Type" class="form-control border-0 shadow" />
                    <label asp-for="Product.Type" class="ms-2"></label>
                    <span asp-validation-for="Product.Type" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Color" class="form-control border-0 shadow" />
                    <label asp-for="Product.Color" class="ms-2"></label>
                    <span asp-validation-for="Product.Color" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price" class="ms-2"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Material" class="form-control border-0 shadow" />
                    <label asp-for="Product.Material" class="ms-2"></label>
                    <span asp-validation-for="Product.Material" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Size" class="form-control border-0 shadow" />
                    <label asp-for="Product.Size" class="ms-2"></label>
                    <span asp-validation-for="Product.Size" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Quantity" class="form-control border-0 shadow" />
                    <label asp-for="Product.Quantity" class="ms-2"></label>
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.CategoryId"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.categoryList" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="GenderIds"> Genders </label>
                    <select class="form-select" name="GenderIds" id="GenderIds" multiple>
                        <option disabled selected>--Select Gender--</option>
                        @foreach (Gender obj in Model.genderList)
                        {
                            <option value="@obj.Id">@obj.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Product.Genders" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Description" class="form-control border-0 shadow" />
                    <label asp-for="Product.Description" class="ms-2"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.Images"></label>
                    <input type="file" name="image" class="form-control" />
                    <span asp-validation-for="Product.Images" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Add</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to list
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}