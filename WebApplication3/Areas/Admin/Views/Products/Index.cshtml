@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient ml-0 py-3" style="background-color: #6f1edc;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Available items</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end mb-2">
                <a asp-controller="Products" asp-action="Create" class="btn" style="background-color: #6f1edc; color:white;">
                    <i class="bi bi-plus-circle"></i> Add new product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <tbody>

                @foreach (var obj in Model.OrderBy(i => i.Type))
                {
                    <tr>
                        <td>
                            @obj.Type
                        </td>
                        <td>
                            @obj.Material
                        </td>
                        <td>
                            @obj.Color
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.Size
                        </td>
                        <td>
                            @obj.Quantity
                        </td>
                        <td>
                            @obj.Category.Type
                        </td>
                        <td>
                            @obj.Genders.Count()
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>