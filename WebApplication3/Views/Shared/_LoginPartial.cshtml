﻿@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="color:black;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="color:black;">
            <a style="color: black;" id="manage" class="custom-color nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item" style="color:black;">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="color:black;" id="logout" type="submit" class="nav-link btn btn-link border-0 custom-color">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="color:black;">
            <a style="color:black;" class="custom-color nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item" style="color:black;">
            <a style="color:black;" class="custom-color nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>